{
    "manifest_version": 3,
    "name": "Simple Site Blocker",
    "version": "1.0.0",
    "icons": {
        "48" : "calendario.png"
    },
    "action" :{
        "default_popup" :"index.html"
    },
    "permissions" : [
        
        "webRequest",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "tabs",
        "storage"
    ],
    "host_permissions" :[
        "<all_urls>"
    ],
    "background" :{
        "service_worker" : "background.js"
    }


}

