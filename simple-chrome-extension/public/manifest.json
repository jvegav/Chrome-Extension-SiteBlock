{
    "manifest_version": 3,
    "name": "BlockIt",
    "version": "1.0.0",
    "icons": {
        "48" : "logo_blockit.png"
    },
    "action" :{
        "default_popup" :"index.html"
    },
    "permissions" : [
        "scripting",
        "webRequest",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "tabs",
        "storage"
    ],
    "host_permissions" :[
        "<all_urls>"
    ],
    "background" :{
        "service_worker" : "background-2.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["blocked.html"],
        "matches": ["<all_urls>"]
      }
    ]


}

